@model Webapp.Pages.Randomusers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Randomuser[0].name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Randomuser[0].gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Randomuser[0].location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Randomuser[0].registered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Randomuser[0].phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Randomuser[0].cell)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Randomuser[0].large_picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Randomuser[0].medium_picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Randomuser[0].thumbnail_picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Randomuser) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.registered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.large_picture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.medium_picture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.thumbnail_picture)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
